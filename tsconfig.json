{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "baseUrl": "./src",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
